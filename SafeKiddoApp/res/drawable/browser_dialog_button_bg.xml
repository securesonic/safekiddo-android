<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/sk_blue_dark" />
            <corners android:radius="@dimen/default_round_corners" />
            <stroke android:width="3dp" />
            <padding android:left="15dp" android:right="15dp" android:top="10dp" android:bottom="10dp" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/sk_blue" />
            <corners android:radius="@dimen/default_round_corners" />
            <stroke android:width="3dp" />
            <padding android:left="15dp" android:right="15dp" android:top="10dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>