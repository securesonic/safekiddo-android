<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/first_screen_button_padd">

    <ImageView
        android:id="@+id/slideIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher" 
        android:contentDescription="@string/app_name"/>

    <com.ardurasolutions.safekiddo.proto.view.TextViewHv
        android:id="@+id/slideTitle"
        android:layout_width="@dimen/first_screen_logo_size"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slideIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="21sp"
        android:gravity="center_horizontal"
        android:textColor="@color/sk_white"
        android:lineSpacingExtra="4dp" />

    <com.ardurasolutions.safekiddo.proto.view.TextViewHv
        android:id="@+id/slideText"
        android:layout_width="@dimen/first_screen_logo_size"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slideTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingBottom="@dimen/first_screen_button_padd"
        android:textSize="13sp"
        android:gravity="center_horizontal"
        android:textColor="@color/sk_white"
        android:lineSpacingExtra="4dp" />

</RelativeLayout>