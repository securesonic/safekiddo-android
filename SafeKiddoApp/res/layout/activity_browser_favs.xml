<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ardurasolutions.safekiddo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <android.support.v7.widget.Toolbar  
	    android:id="@+id/toolbar"
	    style="@style/AppTheme_Toolbar"
	    app:title="@string/label_favs_title" />
    
    <com.ardurasolutions.safekiddo.proto.view.TextViewHv
        android:id="@+id/textPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="17sp"
        style="@style/Text_Settings_Header"
        android:layout_below="@+id/toolbar" />

    <com.ardurasolutions.safekiddo.proto.view.ListViewHv
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:layout_below="@+id/textPath"
        android:background="@color/sk_white" />
    
    <com.ardurasolutions.safekiddo.proto.view.TextViewHv
        android:id="@+id/listOverlayEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/label_no_entrys"
        android:layout_below="@+id/textPath" />

</RelativeLayout>
